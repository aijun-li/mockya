{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
